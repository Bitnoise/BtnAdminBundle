{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal" role="form">
        {{ form_errors(form) }}
        <div class="form-group {% if form.current_password.vars.errors|length %}has-error{% endif %}">
            <label for="fos_user_change_password_form_current_password" class="col-sm-2 control-label">Current Password</label>
            <div class="col-sm-10">
                {{ form_errors(form.current_password) }}
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'Current Password'}}) }}
            </div>
        </div>
        <div class="form-group {% if form.plainPassword.first.vars.errors|length %}has-error{% endif %}">
            <label for="fos_user_change_password_form_plainPassword_first" class="col-sm-2 control-label">New Password</label>
            <div class="col-sm-10">
                {{ form_errors(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'New Password', 'type' : 'password'}}) }}
            </div>
        </div>
        <div class="form-group {% if form.plainPassword.first.vars.errors|length %}has-error{% endif %}">
            <label for="fos_user_change_password_form_plainPassword_second" class="col-sm-2 control-label">Verification</label>
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Verification', 'type' : 'password'}}) }}
            </div>
        </div>
        {{ form_row(form._token) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-warning">{{ 'change_password.submit'|trans }}</button>
            </div>
        </div>
    </form>
{% endblock %}
