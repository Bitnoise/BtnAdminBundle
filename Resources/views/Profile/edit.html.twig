{% extends 'BtnAdminBundle::base.html.twig' %}
{% form_theme form 'BtnAdminBundle:Form:fields.html.twig' %}

{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit form-horizontal" role="form">
        {{ form_errors(form) }}
        <div class="form-group {% if form.username.vars.errors|length %}has-error{% endif %}">
            <label for="fos_user_profile_form_username" class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
            </div>
        </div>
        <div class="form-group {% if form.email.vars.errors|length %}has-error{% endif %}">
            <label for="fos_user_profile_form_email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            </div>
        </div>
        <div class="form-group {% if form.current_password.vars.errors|length %}has-error{% endif %}">
            <label for="fos_user_profile_form_current_password" class="col-sm-2 control-label">Current Password</label>
            <div class="col-sm-10">
                {{ form_errors(form.current_password) }}
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'Current Password'}}) }}
            </div>
        </div>
        {{ form_row(form._token) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">{{ 'profile.edit.submit'|trans }}</button>
            </div>
        </div>
    </form>
{% endblock  %}
